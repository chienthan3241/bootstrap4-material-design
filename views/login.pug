extends layout

block content
  .main.main-raised
    .cd-section.section.section-gray
      .container
        .row
          .col-lg-3.col-md-3
          .col-lg-6.col-md-6
            .card.card-signup.card-blog
              .card-header.card-header-primary.text-center
                h4.card-title Login
              .card-body
                form.form(method="post" action="/login")
                  if (messages.warning)
                    .span.text-danger.text-center
                      | #{messages.warning}
                  .card-body
                    .form-group.bmd-form-group
                      .input-group
                        .input-group-prepend
                          span.input-group-text
                            i.material-icons face
                        input.form-control(type="text" placeholder="Login / Email..." name="username")
                    
                    .form-group.bmd-form-group
                      .input-group
                        .input-group-prepend
                          span.input-group-text
                            i.material-icons lock_outline
                        input.form-control(type="password" placeholder="Password..." name="password")
                  .text-center
                    button.btn.btn-primary.btn-lg(type="submit") Login
